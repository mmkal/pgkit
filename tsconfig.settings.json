{
  "compilerOptions": {
		"target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "keyofStringsOnly": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "ES2018",
      "dom"
    ]
  },
  "references": [
    {"path": "packages/migrator"},
    {"path": "packages/typegen"},
    {"path": "packages/demo"}
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
